{
    "id": "roocode", // Unique ID for your feature (lowercase, alphanumeric, -)
    "version": "1.0.0", // Start with a version number (Semantic Versioning recommended)
    "name": "Roocode Development Environment", // Human-readable name
    "description": "Installs necessary tools and configurations for Roocode development.",
    "documentationURL": "https://github.com/Leikaab/roocode-devcontainer-feature", // Link to your repo (optional)
    "options": {
        // Define options users can configure when using the feature
        "pythonVersion": {
            "type": "string",
            "proposals": ["3.10", "3.11", "3.12", "3.13"],
            "default": "3.12",
            "description": "Select the Python version to install."
        },
        "installGitAlias": {
            "type": "boolean",
            "default": true,
            "description": "Install custom Git aliases."
        }
        // Add more options specific to your "roocode" setup
    },
    "installsAfter": [
        // Optional: If your feature depends on another feature being installed first
        // Example: "ghcr.io/devcontainers/features/python:latest"
    ],
    "entrypoint": "/usr/local/share/roocode-entrypoint.sh" // Optional: Script to run when the container starts *after* creation
    // "containerEnv": { // Optional: Set environment variables
    //  "MY_ROOCODE_VAR": "some-value"
    // }
}